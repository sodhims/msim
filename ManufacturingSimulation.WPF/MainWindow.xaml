<Window x:Class="ManufacturingSimulation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ManufacturingSimulation.WPF.ViewModels"
        Title="Manufacturing Simulation" Height="700" Width="1200"
        Background="#1e1e1e">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#2d2d30" Padding="15">
            <TextBlock Text="Manufacturing Simulation System" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White" VerticalAlignment="Center"/>
        </Border>
        
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Machines}" Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="2" Columns="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10" Padding="15" Background="#2d2d30" 
                            BorderBrush="{Binding StatusColor}" BorderThickness="3" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding MachineName}" FontSize="20" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center"/>
                            
                            <TextBlock Text="{Binding StateText}" FontSize="16" 
                                       Foreground="{Binding StatusColor}" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <TextBlock Text="Processing: " FontSize="14" Foreground="White"/>
                                <TextBlock Text="{Binding CurrentPartId}" FontSize="14" Foreground="White"/>
                            </StackPanel>
                            
                            <ProgressBar Value="{Binding ProgressPercent}" Height="20" 
                                         Margin="0,10,0,0" Foreground="LimeGreen" Maximum="100"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <TextBlock Text="Completed: " FontSize="12" Foreground="LightGray"/>
                                <TextBlock Text="{Binding PartsCompleted}" FontSize="12" Foreground="LightGray"/>
                            </StackPanel>
                            
                            <TextBlock Text="Input Buffer:" FontSize="14" 
                                       Foreground="White" Margin="0,15,0,5"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding BufferCount}" FontSize="12" Foreground="LightGray"/>
                                <TextBlock Text=" parts waiting" FontSize="12" Foreground="LightGray"/>
                            </StackPanel>
                            
                            <ListBox ItemsSource="{Binding Parts}" Background="#1e1e1e" 
                                     Foreground="White" Height="50" Margin="0,5,0,0" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <Border Grid.Row="2" Background="#2d2d30" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="START" Command="{Binding StartCommand}" 
                        Width="100" Height="40" Margin="5" 
                        Background="LimeGreen" Foreground="White" 
                        FontWeight="Bold" FontSize="14"/>
                
                <Button Content="PAUSE" Command="{Binding PauseCommand}" 
                        Width="100" Height="40" Margin="5" 
                        Background="Orange" Foreground="White" 
                        FontWeight="Bold" FontSize="14"/>
                
                <Button Content="RESET" Command="{Binding ResetCommand}" 
                        Width="100" Height="40" Margin="5" 
                        Background="Red" Foreground="White" 
                        FontWeight="Bold" FontSize="14"/>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                    <TextBlock Text="Time: " FontSize="20" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentTime, StringFormat=F2}" FontSize="20" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>