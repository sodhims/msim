<Window x:Class="ManufacturingSimulation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ManufacturingSimulation.WPF.ViewModels"
        Title="Manufacturing Simulation" Height="750" Width="1400"
        Background="#1e1e1e">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#2d2d30" Padding="15">
            <TextBlock Text="Manufacturing Simulation System" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White" VerticalAlignment="Center"/>
        </Border>

        <!-- Machines Grid -->
        <ItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Machines}" Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="2" Columns="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10" Padding="15" Background="#2d2d30" 
                            BorderBrush="{Binding StatusColor}" BorderThickness="3" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding MachineName}" FontSize="18" FontWeight="Bold" 
           Foreground="White" HorizontalAlignment="Center"/>

                            <!-- ADD THIS: Rule Selector -->
                            <ComboBox ItemsSource="{Binding AvailableRules}" 
          SelectedItem="{Binding SelectedRule, Mode=TwoWay}"
          Margin="0,5,0,0"
          Background="#1e1e1e"
          Foreground="White"
          BorderBrush="#3e3e42"
          Height="25"
          FontSize="11"/>

                   <TextBlock Text="{Binding StateText}" FontSize="14" 
           Foreground="{Binding StatusColor}" 
           HorizontalAlignment="Center" Margin="0,5,0,0"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock Text="Processing: " FontSize="12" Foreground="LightGray"/>
                                <TextBlock Text="{Binding CurrentPartId}" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>

                            <ProgressBar Value="{Binding ProgressPercent}" Height="15" 
                                         Margin="0,8,0,0" Foreground="LimeGreen" Maximum="100"/>

                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Completed" FontSize="10" Foreground="LightGray" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding PartsCompleted}" FontSize="16" Foreground="White" 
                                               FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Utilization" FontSize="10" Foreground="LightGray" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Utilization, StringFormat=F1}" FontSize="16" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="%" FontSize="16" Foreground="White" FontWeight="Bold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Input Buffer" FontSize="11" Foreground="LightGray" Margin="0,10,0,3" FontWeight="Bold"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding BufferCount}" FontSize="11" Foreground="White"/>
                                <TextBlock Text=" parts waiting" FontSize="11" Foreground="LightGray"/>
                            </StackPanel>

                            <ListBox ItemsSource="{Binding Parts}" Background="#1e1e1e" 
                                     Foreground="White" Height="40" Margin="0,5,0,0" BorderThickness="0" FontSize="10"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Statistics Panel -->
        <Border Grid.Row="1" Grid.Column="1" Background="#252526" Margin="0,20,20,0" 
                BorderBrush="#3e3e42" BorderThickness="1" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="STATISTICS" FontSize="18" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,15"/>

                    <!-- Overall Stats -->
                    <Border Background="#2d2d30" Padding="12" CornerRadius="3" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Overall Performance" FontSize="12" Foreground="LightGray" 
                                       FontWeight="Bold" Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Parts Arrived:" 
                                           FontSize="11" Foreground="LightGray" Margin="0,3"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Text="{Binding Statistics.TotalPartsArrived}" 
                                           FontSize="11" Foreground="White" FontWeight="Bold" Margin="0,3"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Parts Completed:" 
                                           FontSize="11" Foreground="LightGray" Margin="0,3"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           Text="{Binding Statistics.TotalPartsCompleted}" 
                                           FontSize="11" Foreground="LimeGreen" FontWeight="Bold" Margin="0,3"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Work in Progress:" 
                                           FontSize="11" Foreground="LightGray" Margin="0,3"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           Text="{Binding Statistics.CurrentWIP}" 
                                           FontSize="11" Foreground="Orange" FontWeight="Bold" Margin="0,3"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Throughput:" 
                                           FontSize="11" Foreground="LightGray" Margin="0,3"/>
                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="{Binding Statistics.Throughput, StringFormat=F3}" 
                                               FontSize="11" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text=" parts/time" FontSize="10" Foreground="LightGray" Margin="3,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Flow Time -->
                    <Border Background="#2d2d30" Padding="12" CornerRadius="3" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Average Flow Time" FontSize="12" Foreground="LightGray" 
                                       FontWeight="Bold" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Statistics.AverageFlowTime, StringFormat=F2}" 
                                           FontSize="20" Foreground="Cyan" FontWeight="Bold"/>
                                <TextBlock Text=" time units" FontSize="12" Foreground="LightGray" 
                                           VerticalAlignment="Bottom" Margin="5,0,0,3"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Machine Utilization Summary -->
                    <Border Background="#2d2d30" Padding="12" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="Machine Utilization" FontSize="12" Foreground="LightGray" 
                                       FontWeight="Bold" Margin="0,0,0,8"/>

                            <ItemsControl ItemsSource="{Binding Machines}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding MachineName}" 
                                                       FontSize="10" Foreground="White"/>

                                            <ProgressBar Grid.Column="1" Value="{Binding Utilization}" 
                                                         Height="12" Foreground="{Binding StatusColor}" 
                                                         Maximum="100" Margin="5,0"/>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Utilization, StringFormat=F0}" 
                                                           FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                <TextBlock Text="%" FontSize="10" Foreground="White"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#2d2d30" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="START" Command="{Binding StartCommand}" 
                        Width="100" Height="40" Margin="5" 
                        Background="LimeGreen" Foreground="White" 
                        FontWeight="Bold" FontSize="14"/>

                <Button Content="PAUSE" Command="{Binding PauseCommand}" 
                        Width="100" Height="40" Margin="5" 
                        Background="Orange" Foreground="White" 
                        FontWeight="Bold" FontSize="14"/>

                <Button Content="RESET" Command="{Binding ResetCommand}" 
                        Width="100" Height="40" Margin="5" 
                        Background="Red" Foreground="White" 
                        FontWeight="Bold" FontSize="14"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                    <TextBlock Text="Time: " FontSize="20" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentTime, StringFormat=F2}" FontSize="20" 
                               Foreground="Cyan" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>